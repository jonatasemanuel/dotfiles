#!/usr/bin/env bash

memory(){
	free -h | awk '/^Mem/ { print $3 "/" $2 }' | sed s/i//g 
}
cpu(){
	sensors | awk '/^Tctl:/ {gsub("[+°C]", "", $2); printf "%.0f°C", $2}'

	case $BUTTON in
		1) notify-send "CPU usage" "$(ps axch -o cmd,%cpu --sort=-%cpu | head)" ;;
	esac
}
disk(){
	df | grep /home | awk -F" " '{print $5}'
}

func_name="$1"

$1
