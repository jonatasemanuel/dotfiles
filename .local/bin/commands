folder="$HOME/.local/bin/"
selected() {
  case "$(printf " 󰔛 timer\n  backup\n 󱉧 txtclipboard\n  imageclip\n 󰹑 display\n 󱡫 audioswitch\n  removelogs" | dmenu -c -i )" in
      *󰔛*) echo "timer" ;;
      **) command backup ;;
      *󱉧*) echo "clip" ;;
      **) echo "clip" ;;
      *󰹑*) command display ;;
      *󱡫*) command audioswitch ;;
      **) command removelogs ;;
      *) exit 1;;
     esac

}


selected


