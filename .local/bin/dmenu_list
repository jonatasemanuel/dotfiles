#!/usr/bin/env bash
# for script  in  $(ls ~/.local/bin/ | dmenu -c -i  )   ;  do echo $script; done
folder="$HOME/.local/bin/"
selected() {
  choice=$(
    echo "$(find "$folder" | sort -nr | cut -d' ' -f2- | awk -F'/' '{print $6}')" \
    | dmenu -c -l 10 -i
  )
  command $choice
}
