#!/usr/bin/env bash

# based on the goat bread of linux
# Set audio sinks before using!
# `pactl list sinks` if on pulseaudio.

# tv () { \
#   pacmd set-default-sink "analog-output-headphones" &
#   # notify-send  -h string:bgcolor:#a3be8c "Audio switched to headphones!"
# }

headphones () { \
  pactl set-default-sink "alsa_output.pci-0000_07_00.6.analog-stereo" &
  # notify-send  -h string:bgcolor:#bf616a "Audio switched to headphones!"
}

speakers () { \
  pactl set-default-sink "alsa_output.pci-0000_07_00.1.hdmi-stereo" &
  # notify-send  -h string:bgcolor:#88c0d0 "Audio switched to speakers!"
}

choosespeakers() { \
  choice=$(printf "Headphones\\nSpeakers" | dmenu -c -l 3 -i -p "Choose output: ")
  case "$choice" in
    Headphones) headphones;;
    Speakers) speakers;;
    # Tv) tv;;
  esac
}

choosespeakers
